# ArkWatch Demo Environment Variables
# Copy this to .env and customize

# Database
DATABASE_URL=postgresql://arkwatch:arkwatch_dev_password@postgres:5432/arkwatch

# Redis
REDIS_URL=redis://redis:6379

# Environment
ARKWATCH_ENV=development

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=demo_secret_key_change_in_production

# Stripe (optional for demo)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_secret_here

# Email (optional for demo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
